<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/LoginActivity_textView1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:text="账号："
        android:textSize="30sp" />

    <TextView
        android:id="@+id/LoginActivity_textView2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/LoginActivity_textView1"
        android:layout_marginLeft="70dp"
        android:text="密码："
        android:textSize="30sp" />

    <EditText
        android:id="@+id/LoginActivity_editText1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/LoginActivity_textView1"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/LoginActivity_editText2"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/LoginActivity_editText1"
        android:layout_toRightOf="@id/LoginActivity_textView2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/LoginActivity_button1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="380dp"
        android:text="登陆"
        android:textSize="30sp" />

    <Button
        android:id="@+id/LoginActivity_button2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="380dp"
        android:text="注册"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/LoginActivity_CheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/LoginActivity_editText2"
        android:text="记住账号密码"
        android:textSize="20sp"/>

</RelativeLayout>